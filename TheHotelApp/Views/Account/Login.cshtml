@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager
@{ 
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
  
    <title>Meridian Ibom Hotel - Login</title>
    <!-- ========== Css Files ========== -->
    <link href="~/css/root.css" rel="stylesheet">
    <style type="text/css">

        body {
            background: #F5F5F5;
        }
    </style>
</head>
<body>
    <div class="login-form">
        <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
            <div class="top">
                <h1>Meridian Ibom</h1>
                <h4>Login to view and mange the hotel operations.</h4>
              
            </div>
            <div class="form-area">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="group">
                    <input asp-for="Email" class="form-control" placeholder="Email Address" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <i class="fa fa-user"></i>
                </div>

                <div class="group">
                    <input asp-for="Password" class="form-control" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <i class="fa fa-key"></i>
                </div>
                <div class="checkbox checkbox-primary">
                    <input id="checkbox101" asp-for="RememberMe" />
                    <label for="checkbox101"> Remember Me</label>
                </div>
                <button type="submit" class="btn btn-default btn-block">LOGIN</button>
            </div>
        </form>
        <div class="footer-links row">
            <div class="col-xs-6"><a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]"><i class="fa fa-external-link"></i> Register Now</a></div>
            <div class="col-xs-6 text-right"><a href="#"><i class="fa fa-lock"></i> Forgot password</a></div>
        </div>
    </div>
</body>
</html>


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

